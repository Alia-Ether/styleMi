## Signals
trap 'echo -e "\n${RED}Interrupted"; reset_color; exit 0' SIGINT
trap 'echo -e "\n${RED}Terminated"; reset_color; exit 0' SIGTERM

## Reset terminal colors
reset_color() {
tput sgr0
tput op
}

## Uninstall Mi
uninstall_mi () {

banner

if [[ (-L $PREFIX/bin/Mi) && (-d $PREFIX/share/Mi) ]]; then

echo
echo "    ${BLUE}[${RED}*${BLUE}] ${ORANGE}Uninstalling Mi..."
echo "    ${BLUE}[${RED}*${BLUE}] ${RED}Removing files from $PREFIX/share"

rm -r $PREFIX/share/Mi $PREFIX/bin/Mi

if [[ (! -L $PREFIX/bin/Mi) && (! -d $PREFIX/share/Mi) ]]; then
echo
echo "    ${BLUE}[${RED}*${BLUE}] ${GREEN}Uninstalled Successfully."
reset_color
exit 0
else
echo "    ${BLUE}[${RED}!${BLUE}] ${RED}Error Occured."
reset_color
exit 1
fi

else
echo
echo "    ${BLUE}[${RED}!${BLUE}] ${MAGENTA}Mi ${GREEN}is not installed."
reset_color
exit 0
fi
}

uninstall_mi
